{% extends 'base.html.twig' %}

{% block title %}Business partner{% endblock %}

{% block body %}
    <h1>Business partner</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ businessPartner.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ businessPartner.name }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ businessPartner.status.value }}</td>
            </tr>
            <tr>
                <th>LegalForm</th>
                <td>{{ businessPartner.legalForm.value }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ businessPartner.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ businessPartner.city }}</td>
            </tr>
            <tr>
                <th>Zip</th>
                <td>{{ businessPartner.zip }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ businessPartner.country }}</td>
            </tr>
            <tr>
                <th>Balance</th>
                <td>{{ businessPartner.balance }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-sm btn-outline-secondary float-start" href="{{ path('app_business_partner_list') }}">Back to list</a>

    <a class="btn btn-sm btn-outline-primary float-end" href="{{ path('app_business_partner_edit', {'id': businessPartner.id}) }}">Edit</a>

    {{ include('business_partner/_delete_form.html.twig') }}
{% endblock %}
